function btnClick(e) {
    if ($(e).hasClass('btn-share')) {
        $('.share-bg').show();
    } else if ($(e).hasClass('ready-btn')) {
        $('.home-ready').hide();
        $('#canvas').show();
        $('.canvas-tips').css('display', 'flex')
    } else {
        alloyTouchs.stop();
        alloyTouchs.to(0);
    }
}

